{
  "apps" : [{
    "name"        : "hubot",
    "script"           : "bin/hubot",
    "exec_interpreter" : "sh",
    "args"             : "--adapter slack",
    "error_file"       : "log/hubot.stderr.log",
    "out_file"         : "log/hubot.stdout.log",
    "watch": ["bin", "src", "script"],
    "ignore_watch"      : ["[\\/\\\\]\\./", "node_modules", "README.md"],
    "log_date_format"  : "DD-MM-YYYY HH:mm ",
    "merge_logs"       : true,
    "exec_mode"  : "fork_mode",
    "env": {
      "NODE_ENV": "development"
    }
    }]
  }
